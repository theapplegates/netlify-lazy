// Updated breakpoint values
$bp-small: "(min-width: 576px)";    
$bp-medium: "(min-width: 992px)";   
$bp-large: "(min-width: 1400px)";  

// Your mixin
@mixin bp($point) {
  @if $point == small {
	@media #{$bp-small} { @content; }
  }
  @else if $point == medium {
	@media #{$bp-medium} { @content; }
  }
  @else if $point == large {
	@media #{$bp-large} { @content; }
  }
}
